<div class="form-group required">
    <label class="col-sm-2 control-label" for="input-status">{{ config_status }}</label>
    <div class="col-sm-10">
        <select name="{{ prefix ~ 'status' }}" id="input-status" class="form-control">
            {% if status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
            {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
            {% endif %}
        </select>
    </div>
    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10 description">
            <i>{{ config_status_desc }}</i>
        </div>
    </div>
</div>
{% if type != 'sepact' %}
    {% for key, lang_title in title %}
        <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-{{ title_lang }}">{{ config_title ~ '-' ~ key|upper }}</label>
            <div class="col-sm-10">
                <input
                        name="{{ prefix ~ 'title'}}[{{ key }}]"
                        id="input-title"
                        class="form-control"
                        type="text"
                        value="{{ lang_title }}">
            </div>
            <div class="form-group">
                <div class="col-sm-2"></div>
                <div class="col-sm-10 description">
                    <i>{{ config_title_desc }}</i>
                </div>
            </div>
        </div>
    {% endfor %}
{% endif %}
<div class="form-group">
    <label class="col-sm-2 text-right" for="psd-two-link">{{ config_psd_two_heading }}</label>
    <div class="col-sm-10 description">
        <i>{{ config_psd_two_text }}</i>
    </div>
</div>
{% if type != 'sepact' %}
    <div class="form-group required">
        <label class="col-sm-2 control-label" for="input-sort-order">{{ config_sort_order }}</label>
        <div class="col-sm-10">
            <input
                    name="{{ prefix ~ 'sort_order' }}"
                    id="input-sort-order"
                    class="form-control"
                    type="text"
                    value="{{ sort_order }}">
        </div>
        <div class="form-group">
            <div class="col-sm-2"></div>
            <div class="col-sm-10 description">
                <i>{{ config_sort_order_desc }}</i>
            </div>
        </div>
    </div>
{% endif %}
{% if type == 'sofortbanking' %}
<div class="form-group">
    <div class="col-sm-11">
        <label class="col-sm-2 control-label" for="input-status">
            {{ config_logo_variant }}
        </label>
        <div class="col-sm-10">
            <select name="{{ prefix ~ 'logo_variant' }}" id="input-logo-variant" class="form-control">
                {% if logo_variant == 'standard' %}
                    <option value="standard" selected="selected">{{ text_logo_variant_standard }}</option>
                    <option value="descriptive">{{ text_logo_variant_descriptive }}</option>
                {% else %}
                    <option value="standard">{{ text_logo_variant_standard }}</option>
                    <option value="descriptive" selected="selected">{{ text_logo_variant_descriptive }}</option>
                {% endif %}
            </select>
        </div>
        <div class="form-group">
            <div class="col-sm-2"></div>
            <div class="col-sm-10 description">
                <i>{{ config_logo_variant_desc }}</i>
            </div>
        </div>
    </div>
    <div class="col-sm-1 text-center">
        <img id="logo-preview" src="https://cdn.klarna.com/1.0/shared/image/generic/badge/{{ language_code }}/pay_now/{{ logo_variant }}/pink.svg">
    </div>
</div>
{% endif %}
<div class="form-group required">
    <label class="col-sm-2 control-label" for="input-merchant-account-id">{{ config_merchant_account_id }}</label>
    <div class="col-sm-10">
        <input
                name="{{ prefix ~ 'merchant_account_id' }}"
                id="input-merchant-account-id"
                class="form-control"
                type="text"
                value="{{ merchant_account_id }}">
    </div>
    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10 description">
            {% if type != 'creditcard' %}
                <i>{{ config_merchant_account_id_desc }}</i>
            {% else %}
                <i>{{ config_merchant_account_id_cc_desc }}</i>
            {% endif %}
        </div>
    </div>
</div>
<div class="form-group required">
    <label class="col-sm-2 control-label" for="input-merchant-secret">{{ config_merchant_secret }}</label>
    <div class="col-sm-10">
        <input
                name="{{ prefix ~ 'merchant_secret' }}"
                id="input-merchant-secret"
                class="form-control"
                type="text"
                value="{{ merchant_secret }}">
    </div>
    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10 description">
            {% if type != 'creditcard' %}
                <i>{{ config_merchant_secret_desc }}</i>
            {% else %}
                <i>{{ config_merchant_secret_cc_desc }}</i>
            {% endif %}
        </div>
    </div>
</div>

{% if has_payment_actions %}
<div class="form-group required">
    <label class="col-sm-2 control-label" for="input-status">{{ config_payment_action }}</label>
    <div class="col-sm-10">
        <select name="{{ prefix ~ 'payment_action' }}" id="input-status" class="form-control">
            {% if payment_action == 'pay' %}
                <option value="pay" selected="selected">{{ text_payment_action_pay }}</option>
                <option value="reserve">{{ text_payment_action_reserve }}</option>
            {% else %}
                <option value="pay">{{ text_payment_action_pay }}</option>
                <option value="reserve" selected="selected">{{ text_payment_action_reserve }}</option>
            {% endif %}
        </select>
    </div>
    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10 description">
            <i>{{ config_payment_action_desc }}</i>
        </div>
    </div>
</div>
{% else %}
<input type="hidden" name="{{ prefix ~ 'payment_action' }}" value="{{ payment_action }}" />
{% endif %}

